
<div class="home-navbar d-flex justify-content-between" id="navbarSupportedContent">
  <%= link_to "/", class: "logo-navbar" do %>
    <%= image_tag "Simple Circle Logo-4.png" %>
  <% end %>
  <ul class="list-unstyled d-flex align-items-center">
    <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Bounties", "/bounties", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Create a bounty", "/bounties/new", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Dashboard", "/dashboard", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", "/chat", class: "nav-link" %>
      </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Bounties", "/bounties", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", "#", class: "dropdown-item", data: {turbo_method: :delete} %>
          </div>
        </li>
      </div>
    <% else %>
      <%= link_to "Login", "/user/login" %>
    <% end %>
  </ul>
</div>

